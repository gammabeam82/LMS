{% extends 'base.html.twig' %}

{% block title %}{{ 'genre.genres' | trans }}{% endblock %}

{% block body %}
	<div class="container-fluid">

		<div class="row">
			<div class="col-xs-12">
				<ol class="breadcrumb">
					<li class="active">{{ 'genre.genres' | trans }}</li>
				</ol>
			</div>
		</div>


		<div class="row">
			<div class="col-xs-12">
				{% for flash_message in app.session.flashBag.get('notice') %}
					<div class="panel panel-default">
						<div class="panel-body bg-success">
							{{ flash_message }}
						</div>
					</div>
				{% endfor %}
			</div>
		</div>


		<div class="row">
			<div class="col-xs-12">

				<table class="table table-striped table-hover">
					<tr>
						<th>Жанр</th>
						<th>Книги</th>
						<th>
							{% if is_granted('ROLE_ADMIN') %}
								<a class="btn btn-success btn-sm" href="{{ path('genres_add') }}">
									<i class="glyphicon glyphicon-plus"></i> {{ 'actions.add_genre' | trans }}
								</a>
							{% endif %}
						</th>
					</tr>

					{% for genre in genres %}
						<tr>
							<td>{{ genre.name }}</td>
							<td>
								<a href="{{ path('books', {'book_filter[genre][]': genre.id}) }}" class="btn {{ genre.books | length ? 'btn-success' : 'btn-default disabled' }}">
									{{ genre.books | length }}
								</a>
							</td>
							<td>
								{% if is_granted('ROLE_ADMIN') %}
									<a class="btn btn-primary btn-sm" href="{{ path('genres_edit', {'id': genre.id}) }}">
										<i class="glyphicon glyphicon-edit"></i> {{ 'actions.edit' | trans }}
									</a>
									<button data-name="{{ genre.name }}" data-toggle="modal" data-target="#Modal" class="btn btn-danger btn-sm delete" data-path="{{ path('genres_delete', {'id': genre.id}) }}">
										<i class="glyphicon glyphicon-remove"></i> {{ 'actions.delete' | trans }}
									</button>
								{% endif %}
							</td>
						</tr>
					{% endfor %}

				</table>

				<div class="navigation">
					{{ knp_pagination_render(genres) }}
				</div>

			</div>
		</div>

	</div>

{% endblock %}

{% block modal %}
	{% if genres|length > 0 %}
		{% include('modal-delete.html.twig') %}
	{% endif %}
{% endblock %}