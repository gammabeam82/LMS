{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %}Книги{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('assets/vendor/chosen-bootstrap/chosen.bootstrap.min.css') }}"/>
	<link rel="stylesheet" href="{{ asset('assets/vendor/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css') }}"/>
{% endblock %}

{% block body %}

	<div class="modal fade" id="Modal" tabindex="-1" role="dialog">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="myModalLabel">Внимание!</h4>
				</div>
				<div class="modal-body">
					Действительно удалить книгу <span class="book-name"></span>?
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
					<a type="button" class="btn btn-danger delete-book" href="#">
						<i class="glyphicon glyphicon-remove"></i> Удалить
					</a>
				</div>
			</div>
		</div>
	</div>


	<div class="container-fluid">

		<div class="row">
			<div class="col-xs-12">
				<ol class="breadcrumb">
					<li class="active">Книги</li>
				</ol>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-12">
				{% for flash_message in app.session.flashBag.get('notice') %}
					<div class="panel panel-default">
						<div class="panel-body bg-success">
							{{ flash_message }}
						</div>
					</div>
				{% endfor %}
				{% for flash_message in app.session.flashBag.get('error') %}
					<div class="panel panel-default">
						<div class="panel-body bg-danger">
							{{ flash_message }}
						</div>
					</div>
				{% endfor %}
			</div>
		</div>

		<div class="row">

			{{ form_start(form) }}
			<div class="col-xs-3">
				{{ form_row(form.name) }}
			</div>
			<div class="col-xs-3">
				{{ form_row(form.author, {'attr': {
					'class': 'chosen-select',
					'data-placeholder': 'Выбор автора'
				} }) }}
			</div>
			<div class="col-xs-3">
				{{ form_row(form.genre, {'attr': {
					'class': 'chosen-select',
					'data-placeholder': 'Выбор жанра'
				} }) }}
			</div>

		</div>

		<div class="row">

			<div class="col-xs-3">
				{{ form_row(form.createdAtStart) }}
			</div>
			<div class="col-xs-3">
				{{ form_row(form.createdAtEnd) }}
			</div>
			<div class="col-xs-3">
				{{ form_row(form.mostPopular) }}
			</div>

		</div>
		<div class="row">

			<div class="col-xs-3">
				<button type="submit" class="btn btn-primary">
					<i class="glyphicon glyphicon-search"></i> Показать
				</button>
				<a role="button" class="btn btn-default" href="{{ path('books') }}">
					<i class="glyphicon glyphicon-remove-circle"></i> Сбросить
				</a>
				<br/><br/>
			</div>

			{{ form_end(form) }}

		</div>

		<div class="row">
			<div class="col-xs-12">

				<table class="table table-striped table-hover">
					<tr>
						<th>Название</th>
						<th>Автор</th>
						<th>Жанр</th>
						<th>{{ knp_pagination_sortable(books, 'Дата добавления', 'b.createdAt') }}</th>
						<th>
							<a class="btn btn-success btn-sm {{ is_granted('ROLE_ADMIN') ? '' : 'disabled' }}" href="{{ path('books_add') }}">
								<i class="glyphicon glyphicon-plus"></i> Добавить книгу
							</a>
						</th>
					</tr>

					{% for book in books %}
						<tr>
							<td>
								<b>
									<a href="{{ path('books_view', {'id': book.id}) }}">{{ book.name }}</a>
								</b>
							</td>
							<td>{{ book.author.shortName }}</td>
							<td>{{ book.genre ? book.genre.name : "-" }}</td>
							<td>{{ book.createdAt | date("d.m.Y H:i") }}</td>
							<td>
								<a class="btn btn-primary btn-sm {{ is_granted('ROLE_ADMIN') ? '' : 'disabled' }}" href="{{ path('books_edit', {'id': book.id}) }}">
									<i class="glyphicon glyphicon-edit"></i> Редактировать
								</a>
								<button data-name="{{ book.name }}" data-toggle="modal" data-target="#Modal" class="btn btn-danger btn-sm delete {{ is_granted('ROLE_ADMIN') ? '' : 'disabled' }}" data-path="{{ path('books_delete', {'id': book.id}) }}">
									<i class="glyphicon glyphicon-remove"></i> Удалить
								</button>
							</td>
						</tr>
					{% endfor %}

				</table>

				<div class="navigation">
					{{ knp_pagination_render(books) }}
				</div>

			</div>
		</div>

	</div>

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('assets/vendor/chosen/chosen.jquery.js') }}"></script>
	<script src="{{ asset('assets/vendor/moment/min/moment.min.js') }}"></script>
	<script src="{{ asset('assets/vendor/moment/locale/ru.js') }}"></script>
	<script src="{{ asset('assets/vendor/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js') }}"></script>
	<script src="{{ asset('assets/js/books-index.js') }}"></script>
{% endblock %}
