<div class="modal fade" id="modal-annotation" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header bg-info">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="ModalAnnotationLabel">{{ 'book.annotation' | trans }}</h4>
			</div>
			<div class="modal-body">
				<p class="annotation">

				</p>
			</div>
			<div class="modal-footer">
				<a role="button" href="#" class="btn btn-default" data-dismiss="modal">{{ 'actions.close' | trans }}</a>
			</div>
		</div>
	</div>
</div>

<script>
	$(document).ready( () => {
		$('.show-annotation').on('click', function (event) {
			event.preventDefault();
			$('.annotation').text($(this).attr('data-annotation'));
		});
	});
</script>