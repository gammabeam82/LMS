<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8"/>
	<meta http-equiv="x-ua-compatible" content="ie=edge"/>
	<meta name="description" content=""/>
	<meta name="viewport" content="width=device-width, initial-scale=1"/>

	<title>{% block title %} title {% endblock %}</title>

	{% block stylesheets %}
		<link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}"/>
		<link rel="stylesheet" href="{{ asset('assets/vendor/PACE/themes/blue/pace-theme-minimal.css') }}"/>
		<link rel="stylesheet" href="{{ asset('assets/css/style.css') }}"/>
	{% endblock %}

	<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>

<nav class="navbar navbar-default">
	<div class="container-fluid">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand" href="{{ path('homepage') }}">
				<i class="glyphicon"></i> {{ 'navigation.home' | trans }}
			</a>
		</div>


		<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			<ul class="nav navbar-nav">
				<li>
					<a href="{{ path('books') }}">
						<i class="glyphicon glyphicon-book"></i> {{ 'navigation.books' | trans }}
					</a>
				</li>
				<li>
					<a href="{{ path('genres') }}">
						<i class="glyphicon glyphicon-tags"></i> {{ 'navigation.genres' | trans }}
					</a>
				</li>
				<li>
					<a href="{{ path('authors') }}">
						<i class="glyphicon glyphicon-user"></i> {{ 'navigation.authors' | trans }}
					</a>
				</li>
				{% if is_granted('IS_AUTHENTICATED_FULLY') %}
					<li>
						<a href="{{ path('archive_index') }}" class="archive-link">
							<i class="glyphicon glyphicon-folder-close"></i> {{ 'messages.archive' | trans }}
							(<span class="books-count" data-path="{{ path('archive_count') }}">0</span>)
						</a>
					</li>
					<li>
						<a href="{{ path('fos_user_security_logout') }}">
							<i class="glyphicon glyphicon-log-out"></i> {{ 'navigation.logout' | trans }}
						</a>
					</li>
				{% else %}
					<li>
						<a href="{{ path('fos_user_security_login') }}">
							<i class="glyphicon glyphicon-log-in"></i> {{ 'navigation.login' | trans }}
						</a>
					</li>
					<li>
						<a href="{{ path('fos_user_registration_register') }}">
							<i class="glyphicon glyphicon-plus-sign"></i> {{ 'navigation.register' | trans }}
						</a>
					</li>
				{% endif %}
			</ul>

			<form class="navbar-form navbar-right" name="book_filter" method="GET" action="{{ path('books') }}">
				<div class="form-group">
					<input type="text" class="form-control" placeholder="" name="book_filter[search]" data-toggle="tooltip" data-placement="bottom" title="Поиск книги или автора"/>
				</div>
				<button type="submit" class="btn btn-default {{ is_granted('IS_AUTHENTICATED_FULLY') ? '' : 'disabled' }}">
					<i class="glyphicon glyphicon-search"></i> {{ 'actions.search' | trans }}
				</button>
			</form>

		</div>
	</div>
</nav>

<div class="jumbotron">

</div>

{% block body %}
{% endblock %}

<footer>

</footer>

{% block javascripts %}
	<script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
	<script src="{{ asset('assets/vendor/PACE/pace.min.js') }}"></script>
	<script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
	<script src="{{ asset('assets/js/base.js') }}"></script>
{% endblock %}

{% block modal %}{% endblock %}

<div class="modal fade" id="archive-modal" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			</div>
			<div class="modal-body">
			</div>
		</div>
	</div>
</div>

</body>
</html>
