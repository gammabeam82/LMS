<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8"/>
	<meta http-equiv="x-ua-compatible" content="ie=edge"/>
	<meta name="description" content=""/>
	<meta name="viewport" content="width=device-width, initial-scale=1"/>

	<title>{% block title %} title {% endblock %}</title>

	{% block stylesheets %}
		<link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}"/>
		<link rel="stylesheet" href="{{ asset('assets/vendor/PACE/themes/blue/pace-theme-minimal.css') }}"/>
	{% endblock %}

	<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>

<nav class="navbar navbar-default">
	<div class="container-fluid">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand" href="{{ path('homepage') }}"><i class="glyphicon"></i> На главную</a>
		</div>


		<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			<ul class="nav navbar-nav">
				<li><a href="{{ path('books') }}"><i class="glyphicon glyphicon-book"></i> Книги</a></li>
				<li><a href="{{ path('genres') }}"><i class="glyphicon glyphicon-tags"></i> Жанры</a></li>
				<li><a href="{{ path('authors') }}"><i class="glyphicon glyphicon-user"></i> Авторы</a></li>
				<li>
					{% if is_granted('IS_AUTHENTICATED_FULLY')%}
						<a href="{{ path('fos_user_security_logout') }}">
							<i class="glyphicon glyphicon-log-out"></i> Выход
						</a>
					{% else %}
						<a href="{{ path('fos_user_security_login') }}">
							<i class="glyphicon glyphicon-log-in"></i> Вход
						</a>
					{% endif %}
				</li>
			</ul>

			<form class="navbar-form navbar-right" name="book_filter" method="GET">
				<div class="form-group">
					<input type="text" class="form-control" placeholder="" name="book_filter[search]"/>
				</div>
				<button type="submit" class="btn btn-default">
					<i class="glyphicon glyphicon-search"></i> Искать
				</button>
			</form>

		</div>
	</div>
</nav>

{% block body %}
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
	<script src="{{ asset('assets/vendor/PACE/pace.min.js') }}"></script>
	<script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
{% endblock %}

</body>
</html>
