{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}Книги{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('assets/vendor/chosen-bootstrap/chosen.bootstrap.min.css') }}"/>
{% endblock %}

{% block body %}

	<div class="modal fade" id="Modal" tabindex="-1" role="dialog">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="myModalLabel">Внимание!</h4>
				</div>
				<div class="modal-body">
					Действительно удалить книгу?
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
					<a type="button" class="btn btn-danger delete-book" href="#">
						<i class="glyphicon glyphicon-remove"></i> Удалить
					</a>
				</div>
			</div>
		</div>
	</div>


	<div class="container-fluid">

		<div class="row">
			<div class="col-xs-12">
				<ol class="breadcrumb">
					<li><a href="{{ path('homepage') }}">На главную</a></li>
					<li class="active">Книги</li>
				</ol>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-12">
				<div class="jumbotron">

				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-12">
				{% for flash_message in app.session.flashBag.get('notice') %}
					<div class="panel panel-default">
						<div class="panel-body bg-success">
							{{ flash_message }}
						</div>
					</div>
				{% endfor %}
			</div>
		</div>

		<div class="row">

			{{ form_start(form) }}
			<div class="col-xs-3">{{ form_row(form.name) }}</div>
			<div class="col-xs-3">{{ form_row(form.author, {'attr': {
					'class': 'chosen-select',
					'data-placeholder': 'Выбор автора'
				} }) }}</div>
			<div class="col-xs-3">{{ form_row(form.genre, {'attr': {
					'class': 'chosen-select',
					'data-placeholder': 'Выбор жанра'
				} }) }}</div>

			<div class="col-xs-3">
				<button type="submit" class="btn btn-primary">Показать</button>
				<a role="button" class="btn btn-default" href="{{ path('books') }}">Сбросить</a>
			</div>

			{{ form_end(form) }}

		</div>

		<div class="row">
			<div class="col-xs-12">

				<table class="table table-striped table-hover">
					<tr>
						<th>Книга</th>
						<th>Автор</th>
						<th>Жанр</th>
						<th>
							<a class="btn btn-success btn-sm" href="{{ path('books_add') }}">
								<i class="glyphicon glyphicon-plus"></i> Добавить книгу
							</a>
						</th>
					</tr>

					{% for book in pagination %}

						<tr>
							<td>{{ book.name }}</td>
							<td>{{ book.author.shortName }}</td>
							<td>{{ book.genre ? book.genre.name : "-" }}</td>
							<td>
								<a class="btn btn-primary btn-sm" href="{{ path('books_edit', {'id': book.id}) }}">
									<i class="glyphicon glyphicon-pencil"></i> Редактировать
								</a>
								<button data-toggle="modal" data-target="#Modal" class="btn btn-danger btn-sm delete" data-path="{{ path('books_delete', {'id': book.id}) }}">
									<i class="glyphicon glyphicon-remove"></i> Удалить
								</button>
							</td>
						</tr>

					{% endfor %}

				</table>

				<div class="navigation">
					{{ knp_pagination_render(pagination) }}
				</div>

			</div>
		</div>

	</div>

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('assets/vendor/chosen/chosen.jquery.js') }}"></script>
	<script src="{{ asset('assets/js/books-index.js') }}"></script>
{% endblock %}
