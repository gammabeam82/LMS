{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}Книги{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('assets/vendor/chosen-bootstrap/chosen.bootstrap.min.css') }}"/>
{% endblock %}

{% block body %}

	<div class="container-fluid">

		<div class="row">
			<div class="col-xs-12">
				<ol class="breadcrumb">
					<li><a href="{{ path('homepage') }}">На главную</a></li>
					<li class="active">Книги</li>
				</ol>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-12">
				<div class="jumbotron">

				</div>
			</div>
		</div>

		<div class="row">

			{{ form_start(form) }}
			<div class="col-xs-3">{{ form_row(form.name) }}</div>
			<div class="col-xs-3">{{ form_row(form.author, {'attr': {'class': 'chosen-select'} }) }}</div>
			<div class="col-xs-3">{{ form_row(form.genre, {'attr': {'class': 'chosen-select'} }) }}</div>

			<div class="col-xs-3">
				<button type="submit" class="btn btn-primary">Показать</button>
				<a role="button" class="btn btn-default" href="{{ path('books') }}">Сбросить</a>
			</div>

			{{ form_end(form) }}

		</div>

		<div class="row">
			<div class="col-xs-12">

				<table class="table table-striped table-hover">
					<tr>
						<th>Название</th>
						<th>Автор</th>
						<th>Жанр</th>
					</tr>

					{% for book in pagination %}

						<tr>
							<td>{{ book.name }}</td>
							<td>{{ book.author.shortName }}</td>
							<td>{{ book.genre ? book.genre.name : "-" }}</td>
						</tr>

					{% endfor %}

				</table>

			</div>
		</div>

	</div>

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('assets/vendor/chosen/chosen.jquery.js') }}"></script>
	<script src="{{ asset('assets/js/books-index.js') }}"></script>
{% endblock %}
