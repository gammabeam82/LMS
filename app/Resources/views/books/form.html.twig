{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}
	{% if book.id %}
		{{ 'book.edit' | trans }}
	{% else %}
		{{ 'book.add' | trans }}
	{% endif %}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('assets/vendor/chosen-bootstrap/chosen.bootstrap.min.css') }}"/>
	<link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap-fileinput/css/fileinput.min.css') }}"/>
{% endblock %}

{% block body %}
	<div class="container-fluid">

		<div class="row">
			<div class="col-xs-12">
				<ol class="breadcrumb">
					<li>
						<a href="{{ path('books') }}">{{ 'book.books' | trans }}</a>
					</li>
					{% if book.id %}
						<li>
							<a href="{{ path('books', {'book_filter[author][]': book.author.id}) }}">{{ book.author.shortName }}</a>
						</li>
						<li class="active">
							{{ book.name }}
						</li>
					{% else %}
						<li class="active">
							{{ 'book.add' | trans }}
						</li>
					{% endif %}
				</ol>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-6">

				{% for flash_message in app.session.flashBag.get('notice') %}
					<div class="panel panel-default">
						<div class="panel-body bg-success">
							{{ flash_message }}
						</div>
					</div>
				{% endfor %}

				{{ form_start(form) }}
				{{ form_row(form.name) }}
				{{ form_row(form.author, {'attr': {'class': 'chosen-select'} }) }}
				{{ form_row(form.genre, {'attr': {'class': 'chosen-select', 'data-placeholder': 'messages.genre_select' | trans } }) }}

				{% if book.id %}
					{{ form_row(form.file, {'attr': {'class': 'upload', 'accept': 'text/plain'} }) }}
				{% else %}
					{{ form_row(form.file, {'attr': {'class': 'upload', 'accept': 'text/plain', 'required': true } }) }}
				{% endif %}

				<button type="submit" class="btn btn-success pull-right">
					<i class="glyphicon glyphicon-plus"></i> {{ 'actions.save' | trans }}
				</button>

				{% if book.id %}
					<button data-name="{{ book.name }}" data-toggle="modal" data-target="#Modal" class="btn btn-danger delete pull-right" data-path="{{ path('books_delete', {'id': book.id}) }}">
						<i class="glyphicon glyphicon-remove"></i> {{ 'actions.delete' | trans }}
					</button>
				{% endif %}

				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('assets/vendor/bootstrap-fileinput/js/fileinput.min.js') }}"></script>
	<script src="{{ asset('assets/vendor/chosen/chosen.jquery.js') }}"></script>
	<script src="{{ asset('assets/js/books-form.js') }}"></script>
{% endblock %}

{% block modal %}
	{% if book.id %}
		{% include('modal-delete.html.twig') %}
	{% endif %}
{% endblock %}